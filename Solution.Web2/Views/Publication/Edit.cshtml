@model Solution.Web2.Models.PublicationVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="card">
    <div class="card-header header-elements-inline">
        <h3 class="card-title">Update Publication </h3>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Edit", "Publication", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group row">
                <label class="col-lg-3 col-form-label"><b class="animated  zoomInUp delay-1s">Title :</b></label>
                <div class="col-lg-9">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label"><b class="animated  zoomInUp delay-1s">Your description :</b></label>
                <div class="col-lg-9">
                    @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "5", cols = "3", placeholder = "You can descripe the publication here...", })
                    @Html.ValidationMessageFor(model => model.description)
                </div>
            </div>

            <div class="form-group">

                <div class="form-group">


                    <div class="form-input-styled">
                        @Html.TextBox("Image", null, new
                   {
                       type = "file",
                       @class = "form-input-styled"
                   })
                        @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                        <span class="form-text text-muted">Accepted formats: gif, png, jpg. Max file size 2Mb</span>
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label"><b class="animated  zoomInUp delay-1s">Visibility :</b></label>
                <div class="form-control-select2-icons">
                    @Html.EnumDropDownListFor(model => model.visibility, "Please select Visibility")
                    @Html.ValidationMessageFor(model => model.visibility, "", new { @class = "text-danger" })

                </div>

            </div>




            <div class="text-right">


                <button type="submit" id="toastr" onclick="create()" class="btn btn-primary animated  fadeIn infinite delay-1s">Update <i class="icon-paperplane ml-2"></i></button>


                <script type="text/javascript">

                    function create() {
                        toastr.success("Your Pub was Updated succefully !");
                    }
                </script>

            </div>
            <div class="text-left">
                <button class="btn" style="background-color:transparent">@Html.ActionLink("Back to List", "Index")<i class="icon-home ml-2"></i></button>
            </div>




        }





